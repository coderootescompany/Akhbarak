<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="تسجيل عضوية"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>


            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:padding="10dp"
                android:textSize="18sp"
                android:hint="الاسم الثلاثي"
                android:textColorHint="@color/black"
                android:background="@drawable/textadded"/>
            <TextView
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:padding="10dp"
                android:textSize="18sp"
                android:hint="البلد"
                android:textColorHint="@color/black"
                android:background="@drawable/textadded"/>

            <TextView
                android:id="@+id/mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:padding="10dp"
                android:textSize="18sp"
                android:hint="الايميل"
                android:textColorHint="@color/black"
                android:background="@drawable/textadded"/>

            <TextView
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:gravity="right"
                android:textSize="18sp"
                android:hint="....."
                android:textColorHint="@color/black"
                android:background="@drawable/textadded"/>

            <TextView
                android:id="@+id/repassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:gravity="right"
                android:textSize="18sp"
                android:text="....."
                android:textColorHint="@color/black"
                android:background="@drawable/textadded"/>

            <com.osamaomar.akhbarak.Helper.RoundRectCornerImageView
                android:id="@+id/imgupload"
                android:layout_width="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="150dp"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/userone"
                android:scaleType="fitXY"
                android:onClick="getProfileImage"
                android:adjustViewBounds="true" />

            <TextView
                android:id="@+id/choiceimg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="18sp"
                android:text="اختار/ي صورة"
                android:textColorHint="@color/black"
                android:background="@drawable/textadded"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/next"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:layout_weight="3"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:text="التالي"
                    android:gravity="center"
                    android:background="@drawable/next_background"
                    />

                <TextView
                    android:id="@+id/back"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:drawableLeft="@drawable/ic_action_back"
                    android:background="@drawable/linear_background"
                    />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>